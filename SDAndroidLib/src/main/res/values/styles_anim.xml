<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- dialog底部弹出菜单动画 -->
    <style name="bottom_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_exit</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
    <!--default nice dialog animation-->
    <style name="DefaultAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/nice_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nice_dialog_exit_anim</item>
    </style>
</resources>