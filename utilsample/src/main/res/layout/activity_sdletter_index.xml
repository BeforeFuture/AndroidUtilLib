<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.widget.SDLetterIndexActivity">

    <com.siberiadante.androidutil.widget.special.SDLetterIndexView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/twenty"
        android:id="@+id/sd_letter_index"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_letter"
        android:layout_width="@dimen/forty_eight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/forty_eight"/>
</android.support.constraint.ConstraintLayout>