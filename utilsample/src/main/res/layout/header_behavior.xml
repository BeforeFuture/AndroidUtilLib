<?xml version="1.0" encoding="utf-8"?>
<com.siberiadante.androidutil.widget.behavior.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.8">

    <RelativeLayout
        android:id="@+id/user_head_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:tag="overScroll">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/meinv" />

        <View
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#80000000" />

    </RelativeLayout>

</com.siberiadante.androidutil.widget.behavior.DisInterceptNestedScrollView>