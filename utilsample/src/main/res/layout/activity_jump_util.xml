<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siberiadante.utilsample.activity.JumpUtilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_open_setting"
            android:layout_width="match_parent"
            android:text="打开设置页面"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_open_setting_details"
            android:layout_width="match_parent"
            android:text="打开APP设置详情页面"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_open_browser"
            android:layout_width="match_parent"
            android:text="通过浏览器大看一个网页"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_open_email"
            android:layout_width="match_parent"
            android:text="打开发送邮件面板"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_send_email"
            android:layout_width="match_parent"
            android:text="打开并发送邮件"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_start_activity1"
            android:layout_width="match_parent"
            android:text="启动一个Activity"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_start_activity2"
            android:layout_width="match_parent"
            android:text="启动一个传值的Activity"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_start_activity3"
            android:layout_width="match_parent"
            android:text="启动一个动画的Activity1"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_start_activity4"
            android:layout_width="match_parent"
            android:text="启动一个动画的Activity2"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
