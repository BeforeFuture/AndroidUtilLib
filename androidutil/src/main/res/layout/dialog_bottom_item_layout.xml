<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sdColorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sdColorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bottom_item_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sdColorWhite"
            android:gravity="center"
            android:minHeight="@dimen/forty_five"
            android:paddingBottom="@dimen/ten"
            android:paddingTop="@dimen/ten"
            android:textColor="@color/sdColorBlack"
            android:textSize="@dimen/font_13"
            android:visibility="gone" />

        <View
            android:id="@+id/bottom_item_dialog_view_line"
            style="@style/ViewLineHorizontalOnePx"
            android:visibility="gone" />

        <ScrollView
            android:id="@+id/bottom_item_dialog_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none">

            <LinearLayout
                android:id="@+id/bottom_item_dialog_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <View style="@style/ViewLineHorizontalEightDp" />

    <TextView
        android:id="@+id/tv_bottom_item_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/sdColorBlack"
        android:textSize="@dimen/font_18" />

</LinearLayout>