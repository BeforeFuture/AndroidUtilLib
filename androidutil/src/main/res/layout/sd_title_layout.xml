<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sd_rl_title_bar_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlSymmetry">

    <!--<RelativeLayout-->
    <!--android:id="@+id/rl_title_bar_height"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/red">-->
    <LinearLayout
        android:id="@+id/sd_ll_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sd_tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="标题"
            android:textColor="@color/sdColorBlack"
            android:textSize="@dimen/sd_font_18"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sd_tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingBottom="@dimen/sd_two"
            android:text="副标题"
            android:textColor="@color/sdColorGray"
            android:textSize="@dimen/sd_font_12" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sd_rl_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sd_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/sd_ten"
            android:src="@drawable/ic_back_black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sd_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/sd_iv_left"
            android:gravity="center"
            android:paddingStart="@dimen/sd_ten"
            android:text="返回"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sd_rl_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/sd_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingEnd="@dimen/sd_ten"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sd_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="@dimen/sd_ten"
            android:text="搜索"
            android:visibility="visible" />
    </RelativeLayout>


    <View
        android:id="@+id/sd_bottom_item_dialog_view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sd_one_point_five"
        android:layout_alignParentBottom="true"
        android:background="@color/sdColorBlack" />
    <!--</RelativeLayout>-->
</RelativeLayout>