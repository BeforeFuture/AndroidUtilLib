<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_alert_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_alert_edit_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sd_fifteen"
        android:layout_marginRight="@dimen/sd_fifteen"
        android:layout_marginTop="@dimen/sd_fifteen"
        android:gravity="center"
        android:textColor="@color/sdColorBlack"
        android:textSize="@dimen/sd_font_18"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edt_alert_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sd_fifteen"
        android:layout_marginRight="@dimen/sd_fifteen"
        android:layout_marginTop="@dimen/sd_fifteen"
        android:background="@drawable/shape_alert_dialog_edit"
        android:maxLines="1"
        android:textColor="@color/sdColorBlack"
        android:textSize="@dimen/sd_font_18" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/sd_ten"
        android:background="@color/sdColorGrayLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_alert_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sd_forty_three"
            android:layout_weight="1"
            android:background="@drawable/dialog_alert_edit_cancel_normal"
            android:gravity="center"
            android:textColor="@color/sdColorBlack"
            android:textSize="@dimen/sd_font_16"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/img_alert_dialog_line"
            android:layout_width="@dimen/sd_one_point_five"
            android:layout_height="@dimen/sd_forty_three"
            android:background="@color/sdColorGrayLine" />

        <Button
            android:id="@+id/btn_alert_dialog_sure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sd_forty_three"
            android:layout_weight="1"
            android:background="@drawable/dialog_alert_edit_sure_normal"
            android:gravity="center"
            android:textColor="@color/sdColorBlack"
            android:textSize="@dimen/sd_font_16"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>