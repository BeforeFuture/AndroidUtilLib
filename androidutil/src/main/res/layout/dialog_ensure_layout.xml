<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_corners_white_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="@dimen/sd_eighty"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sd_twenty_five"
            android:paddingTop="@dimen/sd_ten"
            android:paddingEnd="@dimen/sd_twenty_five"
            android:paddingBottom="@dimen/sd_five">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/sd_thirty"
                android:layout_height="@dimen/sd_thirty"
                android:layout_marginEnd="@dimen/sd_ten"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标题标题标题标题"
                android:textColor="@color/sdColorBlack"
                android:textSize="@dimen/sd_font_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|top"
            android:paddingTop="10dp"
            android:text="副标题或者描述"
            android:textSize="@dimen/sd_font_14"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/ViewLineHorizontalOneDp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sd_forty">

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sd_forty"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textSize="@dimen/sd_font_16" />

            <View style="@style/ViewLineVerticalOneDp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/sdColorBlack"
                android:textSize="@dimen/sd_font_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/sdColorRed"
            android:textSize="@dimen/sd_font_16"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>